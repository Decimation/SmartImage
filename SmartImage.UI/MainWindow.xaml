                    <Image x:Name="Img_Status" HorizontalAlignment="Left" Height="20px" Width="20px"
                           Margin="10,5,0,0"
                           VerticalAlignment="Top" Stretch="None" Grid.Row="1" />

                    <ProgressBar x:Name="Pb_Status" HorizontalAlignment="Left" Height="10" Margin="4,54,0,0"
