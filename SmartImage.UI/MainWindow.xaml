<Window x:Class="SmartImage.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartImage.UI"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">

    <Grid>
        <TabControl x:Name="Tb_Main">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="Tb_Input" HorizontalAlignment="Left" Margin="49,8,0,0" VerticalAlignment="Top" Width="250" TextChanged="Tb_Input_TextChanged" TextInput="Tb_Input_TextInput" Height="20" Drop="Tb_Input_Drop"/>
                    <Button x:Name="Btn_Run" Content="Run" HorizontalAlignment="Left" Margin="304,8,0,0" VerticalAlignment="Top" Click="Btn_Run_Click" Height="20"/>
                    <Image x:Name="Img_Preview" HorizontalAlignment="Left" Height="100" Margin="684,10,0,0" VerticalAlignment="Top" Width="100"/>
                    <ListView x:Name="Lv_Results" Margin="0,125,0,0" d:ItemsSource="{Binding m_results}">
                        <!--<ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>-->
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="85"/>
                                <GridViewColumn Header="URL" DisplayMemberBinding="{Binding URL}" Width="200" />
                                <GridViewColumn Header="Similarity" DisplayMemberBinding="{Binding Similarity}" Width="75" />
                            </GridView>
                        </ListView.View>

                    </ListView>
                    <ProgressBar x:Name="Pb_Status" HorizontalAlignment="Left" Height="10" Margin="684,110,0,0" VerticalAlignment="Top" Width="100" Minimum="0"  Maximum="100"/>
                    <Image x:Name="Img_Status" HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" VerticalAlignment="Top" Width="20"/>
                    <TextBox x:Name="Tb_Input2" HorizontalAlignment="Left" Margin="49,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" IsReadOnly="True" Height="20" MouseDoubleClick="Tb_Input2_MouseDoubleClick"/>
                    <Button x:Name="Btn_Clear" Content="Clear" HorizontalAlignment="Left" Margin="334,8,0,0" VerticalAlignment="Top" Height="20" Click="Btn_Clear_Click"/>
                    <Label x:Name="Lb_Input" Content="Input" HorizontalAlignment="Left" Margin="4,8,0,0" VerticalAlignment="Top" Height="24" FontWeight="Bold"/>
                    <Label x:Name="Lb_Input2" Content="Info" HorizontalAlignment="Left" Margin="4,35,0,0" VerticalAlignment="Top" Height="24" FontWeight="Bold"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="Queue" Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <ListView x:Name="Lv_Queue" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,58,0,0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
